<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NaviDoc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_black_LM</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/Theme.NaviDoc.DrawerToggle</item>
<!--        <item name="buttonStyle">@style/Theme.NaviDoc.Button</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/primary_orange_button_LM</item>

    </style>

    <style name="Theme.NaviDoc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NaviDoc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NaviDoc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

    </style>

    <style name="Theme.NaviDoc.DrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/primary_grey_DM</item>
    </style>

    <style name="Theme.NaviDoc.EditText" parent="Widget.AppCompat.EditText">
<!--        <item name="android:textColor">@color/secondary</item>-->
<!--        <item name="android:textColorHint">@color/primary_light_blue</item>-->
    </style>

    <style name="Theme.NaviDoc.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/primary_orange_button_LM</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>
</resources>